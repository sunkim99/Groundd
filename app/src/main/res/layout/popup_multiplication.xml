<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#45000000"
    android:padding="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/game_bg">

        <TextView
            android:id="@+id/popup_multiplication_count"
            android:layout_width="125dp"
            android:layout_height="42dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="0dp"

            android:layout_marginTop="5dp"
            android:fontFamily="@font/bm_font"
            android:gravity="center"
            android:text="1초"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/popup_multiplication_question"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/popup_multiplication_count"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bm_font"
            android:gravity="center"

            android:text="1 x 1 "
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/popup_multiplication_answer"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/popup_multiplication_question"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:fontFamily="@font/bm_font"

            android:gravity="center"
            android:hint="답을 입력하세요"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"></EditText>

        <Button
            android:id="@+id/popup_multiplication_exist"
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"


            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/menu_bar"
            android:fontFamily="@font/bm_font"
            android:gravity="center"
            android:text="나가기"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/popup_multiplication_next"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/bm_font"
            android:gravity="center"

            android:text="다음"


            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"></Button>

    </RelativeLayout>

</RelativeLayout>